<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.future.bluetoothnamesystem">
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.base.BaseActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.SettingActivity"
            android:label="@string/title_activity_setting" />
        <activity
            android:name=".activity.OnLineActivity"
            android:label="@string/title_activity_on_line" />
        <activity android:name=".activity.ProjectContentText" />
        <activity
            android:name=".activity.base.SetCourseActivity"
            android:label="@string/title_activity_set_course" />
        <activity
            android:name=".activity.NamingResult"
            android:label="@string/title_activity_naming_system" />

        <activity
            android:name="com.future.bluetoothnamesystem.activity.NamingStart"
            android:label="@string/title_activity_naming_result">

        </activity>
        <activity
            android:name=".activity.ClassesNamesActivity"
            android:label="@string/title_activity_classes_names" />
        <activity
            android:name=".activity.CheckResultActivity"
            android:label="@string/title_activity_check_result" />
        <activity
            android:name=".activity.ClassManagerActivity"
            android:label="@string/title_activity_class_manager" />
        <activity
            android:name=".activity.ExportData"
            android:label="@string/title_activity_export_data" />

        <activity android:name=".activity.MainActivity"/>

        <activity android:name=".activity.MainPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
