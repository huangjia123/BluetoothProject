<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.future.bluetoothnamesystem" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.base.BaseActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ClassManagerActivity"
            android:label="@string/title_activity_class_manager"
            android:parentActivityName=".activity.base.BaseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.future.bluetoothnamesystem.activity.base.BaseActivity" />
        </activity>
        <activity
            android:name=".activity.ClassesNamesActivity"
            android:label="@string/title_activity_classes_names" >
        </activity>
        <activity
            android:name=".activity.CheckResultActivity"
            android:label="@string/title_activity_check_result" >
        </activity>
    </application>

</manifest>
