<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:future="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/activity_background"

    tools:context="com.future.bluetoothnamesystem.activity.MainActivity">

    <com.future.bluetoothnamesystem.view.FutureTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        future:activity_title="@string/app_name" />

    <LinearLayout
        style="@style/content_layout_background"
        android:layout_below="@+id/title_bar">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open1"
            android:text="班级管理" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open2"
            android:text="班级名单" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="open3"
            android:text="查看结果" />
    </LinearLayout>

</RelativeLayout>
